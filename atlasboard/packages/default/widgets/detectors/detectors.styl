#plan > polygon
  fill #111111
  stroke gray
  stroke-width 5
  fill-rule evenodd

#house
  fill #111111
  stroke white
  stroke-width 5
  fill-rule evenodd

.content
  font-size 2em
  color $gray-light

  .label
  	font-size 1em
  	color white
  	width 190px
  	height 92px
  	text-align right
  	position absolute

  .temp
    background url('images/temp.png') no-repeat
    background-size 92px

  .temp::after
    content: "\00b0"
  
  .humidity
    background url('images/humidity.png') no-repeat
    background-size 62px
    font-size 0.8em
  
  .humidity::after
    content: "%"

  .door.closed
    background url('images/closed-filled-door.png') no-repeat 10px 0px
    background-size 30%

  .door.open
    background url('images/opened-filled-door.png') no-repeat 10px 0px
    background-size 30%

  .smoke
    background url('images/smoke-detector.png') no-repeat 10px 0px
    background-size 25%

  .person
    background url('images/man.png') no-repeat 10px 0px
    background-size 30%

  .lamp
    background url('images/light-bulb.png') no-repeat 10px 0px
    background-size 30%

  .gateway
    background url('images/mijia.jpg') no-repeat 10px 0px
    background-size 30%

