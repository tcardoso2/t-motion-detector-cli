#house
  fill #111111
  stroke white
  stroke-width 5
  fill-rule evenodd

#batcave
  fill #111111
  stroke gray
  stroke-width 5
  fill-rule evenodd

.content
  font-size 2em
  color $gray-light

  .label
  	font-size 1em
  	color white
  	width 190px
  	height 92px
  	text-align right
  	position absolute

  .temp
    background url('images/temp.png') no-repeat
    background-size 92px
  
  .door.closed
    background url('images/closed-filled-door.png') no-repeat 10px 0px
    background-size 30%

  .door.open
    background url('images/opened-filled-door.png') no-repeat 10px 0px
    background-size 30%

  .person
    background url('images/man.png') no-repeat 10px 0px
    background-size 30%

  .lamp
    background url('images/light-bulb.png') no-repeat 10px 0px
    background-size 30%

#credits
  position absolute
  bottom 0px